    "babel-loader": "^9.1.2",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "concurrently": "^8.1.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jest-webpack-resolver": "^0.3.0",
    "lerna": "^6.6.2",
